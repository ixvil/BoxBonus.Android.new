<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ixvil.android.BoxBonus.Fragments.HomeFragment">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_home_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/a" />


            <TextView
                android:id="@+id/card_wallet_num"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_home_image"
                android:text="Action"
                android:textColor="?attr/colorPrimary"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/card_wallet_balance"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_wallet_num"
                android:text="You have"
                android:textColor="?attr/colorPrimary"
                android:textSize="18dp" />


